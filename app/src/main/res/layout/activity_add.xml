<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkerBG"
    tools:context=".AddActivity">

    <Button
        android:id="@+id/createlob_btn"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/btn_bg"
        android:elevation="0dp"
        android:onClick="createLobby"
        android:stateListAnimator="@null"
        android:text="Create Lobby"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/create_desc"
        app:layout_constraintStart_toStartOf="@+id/create_desc" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/create_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="35dp"
        android:ems="10"
        android:hint="Lobby Title"
        android:inputType="textEmailAddress"
        android:padding="8dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:met_baseColor="@color/lightGray"
        app:met_floatingLabel="highlight"
        app:met_textColor="#FFFFFF"
        app:met_textColorHint="@color/lightGray" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/create_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/et_bg"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/create_title"
        app:layout_constraintStart_toStartOf="@+id/create_title"
        app:layout_constraintTop_toBottomOf="@+id/create_title"
        app:met_baseColor="@color/lightGray"
        app:met_floatingLabel="highlight"
        app:met_textColor="#FFFFFF"
        app:met_textColorHint="@color/lightGray" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Create Lobby"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:fitsSystemWindows="true"
    tools:context=".lobby.AddLobbyActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ch"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:elevation="0dp"
        android:scaleType="center"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/createlob_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categorySpinner"
        app:layout_constraintVertical_bias="0.7"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/ch1_talk"
        app:lottie_scale="0.125"
        app:lottie_speed="1" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/fire_animation4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="105dp"
        android:alpha="0.9"
        android:elevation="0dp"
        android:scaleType="center"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/ch"
        app:layout_constraintStart_toStartOf="@+id/ch"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/fire_animation"
        app:lottie_scale="0.125"
        app:lottie_speed="1" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/categorySpinner"
        app:layout_constraintStart_toStartOf="@+id/categorySpinner"
        app:srcCompat="@drawable/ic_category" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/lobbyTitle"
        app:layout_constraintStart_toStartOf="@+id/lobbyTitle"
        app:srcCompat="@drawable/ic_pencil" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/lobbyTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/et_bg"
        android:ems="10"
        android:hint="What is your story about?"
        android:inputType="textShortMessage|textMultiLine|textCapSentences"
        android:maxLength="100"
        android:padding="6dp"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:met_baseColor="@color/lightGray"
        app:met_floatingLabel="none"
        app:met_maxCharacters="100"
        app:met_primaryColor="@color/colorPrimary"
        app:met_textColor="@color/textColorGray"
        app:met_textColorHint="@color/lightGray"
        app:met_underlineColor="@color/lightGray" />

    <ImageButton
        android:id="@+id/createlobby_back"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        android:onClick="createlobby_back"
        android:padding="2dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back" />

    <Button
        android:id="@+id/createlob_btn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/btn_bg_3"
        android:elevation="0dp"
        android:foreground="?attr/selectableItemBackground"
        android:onClick="createLobby"
        android:stateListAnimator="@null"
        android:text="Create"
        android:textAllCaps="false"
        android:textColor="@color/textColorGray"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/categorySpinner"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/lobbyTitle"
        app:layout_constraintStart_toStartOf="@+id/lobbyTitle"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:ms_arrow_tint="@android:color/white"
        app:ms_background_color="@color/colorSecondary"
        app:ms_hint="Choose Category"
        app:ms_hint_color="@color/lightGray"
        app:ms_text_color="@color/textColor" />

    <TextView
        android:id="@+id/createlobby_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Start a campfire"
        android:textColor="@color/textColorGray"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/createlobby_back"
        app:layout_constraintStart_toEndOf="@+id/createlobby_back"
        app:layout_constraintTop_toTopOf="@+id/createlobby_back" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="32dp"
        android:text="Category"
        android:textColor="@color/textColorGray"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/lobbyTitle" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="65dp"
        android:text="Title"
        android:textColor="@color/textColorGray"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/createlobby_title" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="48dp"
        android:layout_height="23dp"
        app:layout_constraintBottom_toTopOf="@+id/fire_animation4"
        app:layout_constraintEnd_toEndOf="@+id/ch"
        app:srcCompat="@drawable/ic_thinking" />
</androidx.constraintlayout.widget.ConstraintLayout>